{
    "compilerOptions": {
        "inlineSourceMap": true, // allows tslog to reference a correct line number in the TS source code
        "target": "es2020",
        "module": "Node16",
        "lib": [
            "ESNext",
            "DOM",
            "WebWorker"
        ],
        "outDir": "out",
        "strict": true,
        "noUnusedLocals": false,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "noUncheckedIndexedAccess": true,
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
